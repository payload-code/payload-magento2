{
    "name": "payload/payload-magento2",
    "description": "Payload Magento2 Integration",

    "type": "magento2-module",
    "version": "0.3.6",
    "license":  [
        "OSL-3.0"
    ],

    "authors": [
        {
          "name": "Payload",
          "email": "contact@payload.co",
          "homepage": "https://payload.co"
        }
    ],

    "minimum-stability": "dev",
    "prefer-stable": true,

    "require": {
        "php": "~7.1.0|~7.2.0|~7.3.0|~7.4.0",
        "payload/payload-api": ">=0.3.4",
        "magento/module-payment": "100.4.*",
        "magento/module-checkout": "100.4.*",
        "magento/module-sales": "103.0.*",
        "magento/module-backend": "102.0.*",
        "magento/module-vault": "101.2.*",
        "magento/module-quote": "101.2.*"
    },

    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],

    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Payload\\PayloadMagento\\": ""
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpcompatibility/php-compatibility": "*",
        "squizlabs/php_codesniffer": "3.*"
    }

}
